<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/storeItem_cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="2.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="9:16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/storeItem_itemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/storeItem_itemName"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/storeItem_itemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/storeItem_itemPrice"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/thsarabunnew"
                android:text="Item Name"
                android:textSize="28dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/storeItem_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/storeItem_itemPrice"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/thsarabunnew"
                android:text="à¸¿"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/storeItem_itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/thsarabunnew"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_toEndOf="@+id/storeItem_textView1"
                android:text="0" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>