<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foundStoreItem"
    android:background="@drawable/back_signin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/foundStoreItem_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp" />

        <TextView
            android:id="@+id/foundStoreItem_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/foundStoreItem_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/foundStoreItem_image"
            android:text="Item Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/foundStoreItem_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foundStoreItem_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="30dp"
            android:text="ราคา"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/foundStoreItem_text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foundStoreItem_text_name"
            android:layout_alignBottom="@+id/foundStoreItem_text1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/foundStoreItem_text2"
            android:layout_toEndOf="@+id/foundStoreItem_text1"
            android:text="0.00"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/foundStoreItem_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foundStoreItem_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:text="บาท"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/foundStoreItem_text_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foundStoreItem_text_price"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:text="รายละเอียด"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/foundStoreItem_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/foundStoreItem_button_addToCart"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            android:text="จำนวน"
            android:textSize="18sp" />

        <Button
            android:id="@+id/foundStoreItem_button_pics_down"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/foundStoreItem_button_addToCart"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/foundStoreItem_text3"
            android:foreground="@android:drawable/arrow_down_float" />

        <EditText
            android:id="@+id/foundStoreItem_editText_pics"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/foundStoreItem_button_addToCart"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/foundStoreItem_button_pics_add"
            android:layout_toEndOf="@+id/foundStoreItem_button_pics_down"
            android:inputType="number"
            android:text="1"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

        <Button
            android:id="@+id/foundStoreItem_button_pics_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/foundStoreItem_button_addToCart"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/foundStoreItem_text4"
            android:foreground="@android:drawable/arrow_up_float" />

        <TextView
            android:id="@+id/foundStoreItem_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/foundStoreItem_button_addToCart"
            android:layout_alignStart="@+id/foundStoreItem_text1"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="15dp"
            android:text="ราคารวม"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/foundStoreItem_text_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/foundStoreItem_button_addToCart"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:layout_toStartOf="@+id/foundStoreItem_text5"
            android:layout_toEndOf="@+id/foundStoreItem_text4"
            android:text="0.00"
            android:textSize="18sp"
            android:textAlignment="textEnd"/>

        <TextView
            android:id="@+id/foundStoreItem_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/foundStoreItem_button_addToCart"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:text="บาท"
            android:textSize="18sp" />

        <Button
            android:id="@+id/foundStoreItem_button_addToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/foundStoreItem_button_buyNow"
            android:layout_margin="5dp"
            android:text="เพิ่มลงตะกร้า"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/foundStoreItem_button_buyNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"
            android:text="ซื้อตอนนี้"
            android:textSize="20sp"/>

    </RelativeLayout>

    <include
        android:id="@+id/foundStoreItem_toolbar"
        layout="@layout/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>