<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/beacon_cardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/beacon_card_nameTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ชื่อบีคอน"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/beacon_card_nameDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ชื่อบีคอน"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/beacon_card_nameTopic"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/beacon_card_uuidTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="UUID"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/beacon_card_nameDetail"/>

        <EditText
            android:id="@+id/beacon_card_uuidDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UUID"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/beacon_card_uuidTopic"
            android:layout_margin="5dp"
            android:layout_below="@+id/beacon_card_nameDetail"/>

        <TextView
            android:id="@+id/beacon_card_majorTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/beacon_card_uuidDetail"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Major"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/beacon_card_majorDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/beacon_card_uuidDetail"
            android:layout_alignStart="@+id/beacon_card_majorTopic"
            android:layout_marginStart="51dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/beacon_card_minerDetail"
            android:hint="Major"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/beacon_card_minerTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Miner"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/beacon_card_uuidDetail"
            android:layout_toEndOf="@+id/beacon_card_majorTopic"/>

        <EditText
            android:id="@+id/beacon_card_minerDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/beacon_card_uuidDetail"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/beacon_card_minerTopic"
            android:hint="Miner"
            android:textSize="14sp" />

        <Button
            android:id="@+id/beacon_card_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/beacon_card_majorDetail"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="140dp"
            android:text="ลบบีคอน"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>